---
interface Props {
  name: string,
  url: string
  isBig?: boolean
}

const { name, url, isBig= false} = Astro.props;
const id = url.split('/').at(-2);
const imgSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`
---

<a 
  href={`/products/${name}`} 
  class:list={[
    `rounded flex flex-col justify-center items-center px-2`,
    {
      border: !isBig,
    }
  ]}
>
  <img
    transition:name=`${name}-image`
    class:list={[
      {
        'w-sm h-sm': isBig,
        'w-3xs h-3xs': !isBig,
      }
    ]}
    src={ imgSrc } 
    alt={ name }
  >

  <span 
    class:list={[`capitalize`, { 'text-3xl': isBig }]} 
  > 
    #{ id } { name }
  </span>
</a>